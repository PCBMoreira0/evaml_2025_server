<evaml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="teste" xsi:noNamespaceSchemaLocation="../robot_package/xml_schema/evaml_schema.xsd">
  <settings>
    <voice type="en-US_EmmaExpressive" pitchShift="0" />
    <lightEffects mode="ON" />
    <audioEffects mode="ON" />
  </settings>
  <script>
    <wait duration="2" />
    <useMacro macro="M1" />
  </script>
  <macros>
    <macro id="M1">
      <userID />
      <switch var="$">
        <case op="exact" value="1">
          <audio source="efx-blin" block="TRUE" />
        </case>
        <default>
          <audio source="efx-harp-gliss" block="TRUE" />
        </default>
      </switch>
      <useMacro macro="M1" />
    </macro>
  </macros>
</evaml>