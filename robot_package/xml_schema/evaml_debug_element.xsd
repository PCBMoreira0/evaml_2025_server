	<!-- Including the EVAML basic type definitions -->
    <xs:include schemaLocation="./evaml_basic_types.xsd"></xs:include>
	
    <!-- ** EVAML wait command definition ** -->
	<xs:element name="debug">
	  <xs:complexType>
		<xs:attribute name="commMode" type="xs:string" fixed="NULL"/>
		<xs:attribute name="id" type="idType"/>
	    <xs:attribute name="operation" type="debugOpType" use="required"/>
	  </xs:complexType>
	</xs:element>

	<!-- Debug operation type definitions -->
	<xs:simpleType name="debugOpType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="PAUSE"/>
			<xs:enumeration value="SHOW_DOLLAR_VAR"/>
			<xs:enumeration value="SHOW_USER_VARS"/>
		</xs:restriction>
	</xs:simpleType>

</xs:schema>
